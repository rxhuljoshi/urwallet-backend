# urWallet Backend Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://urwallet:changeme@localhost:5432/urwallet

# Docker Compose PostgreSQL settings
POSTGRES_DB=urwallet
POSTGRES_USER=urwallet
POSTGRES_PASSWORD=changeme

# Firebase (place your firebase-credentials.json in the backend directory)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# CORS (comma-separated origins, use * for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Groq AI API Key (get from https://console.groq.com/)
GROQ_API_KEY=your-groq-api-key

# Debug mode (set to true for development)
DEBUG=false
